<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    android:orientation="vertical"
    tools:context="com.rezakhan.android.salesapp.RegAct">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Mobile Number"
        android:textColor="#222222"
        android:textColorHint="#373737"
        android:drawableTint="#6617E4"
        android:id="@+id/reg_mobile"
        android:drawableRight="@drawable/user"
        android:layout_margin="20dp"
        android:ems="10"
        android:inputType="phone" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Password"
        android:textColor="#222222"
        android:textColorHint="#373737"
        android:drawableTint="#6617E4"
        android:id="@+id/reg_password"
        android:drawableRight="@drawable/pasword"
        android:layout_margin="20dp"
        android:inputType="textPassword" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Confirm Password"
        android:textColor="#222222"
        android:textColorHint="#373737"
        android:drawableTint="#6617E4"
        android:id="@+id/reg_confirm"
        android:drawableRight="@drawable/pasword"
        android:layout_margin="20dp"
        android:inputType="textPassword" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter name"
        android:textColor="#222222"
        android:textColorHint="#373737"
        android:drawableTint="#6617E4"
        android:id="@+id/reg_name"
        android:drawableRight="@drawable/pasword"
        android:layout_margin="20dp"
        android:inputType="text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter address"
        android:textColor="#222222"
        android:textColorHint="#373737"
        android:drawableTint="#6617E4"
        android:id="@+id/reg_address"
        android:drawableRight="@drawable/pasword"
        android:layout_margin="20dp"
        android:inputType="text" />

    <TextView
        android:id="@+id/reg_signup"
        android:textColor="#fff"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:gravity="center"
        android:background="#6617E4"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:textStyle="bold"
        />
</LinearLayout>
